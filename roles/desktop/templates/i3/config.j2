# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Set colorscheme:
set $background {{ colorscheme.background }}
set $foreground {{ colorscheme.foreground }}

{% for color in colorscheme.colors %}
set ${{ color.name }} {{ color.value }}
{% endfor %}

set $mod Mod4

# General settings
for_window [class="^.*"] border pixel 2
workspace_auto_back_and_forth yes
force_display_urgency_hint 500 ms

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font Iosevka:14

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill

# start a program launcher
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+c exec --no-startup-id rofi -show calc -modi calc -no-show-match -no-sort -calc-command-history -calc-command "echo -n '{result}' | xclip -selection clipboard"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Shift+backslash split h

# split in vertical orientation
bindsym $mod+Shift+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout toggle
bindsym $mod+x layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+o floating toggle

# change focus between tiling / floating windows
bindsym $mod+o focus mode_toggle

# focus the parent container
# bindsym $mod+p focus parent

# focus the child container
#bindsym $mod+d focus child

# move window out/in scratchpad
bindsym $mod+minus move scratchpad
bindsym $mod+equal scratchpad show
# Float window, move to scratchpad, and make sticky
bindsym $mod+backslash floating enable sticky enable; move scratchpad; scratchpad show

# Dual monitor shifts
bindsym $mod+Ctrl+Right move container to output right
bindsym $mod+Ctrl+Left move workspace to output left

# navigate workspaces next / previous
bindsym Mod1+Tab workspace next
bindsym Mod1+Shift+Tab workspace prev

# Other keybindings
bindsym Print exec "flameshot gui"
bindsym $mod+grave exec "dunstctl set-paused toggle"

bindsym $mod+Shift+i exec ~/.config/i3/bb.sh
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/audio.sh set-sink-volume +5%
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/audio.sh set-sink-volume -5%
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/audio.sh set-sink-mute
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
{% for workspace in workspaces %}
set {{ workspace.key }} "{{ workspace.name }}"
bindsym $mod+{{ workspace.keybinding }} workspace {{ workspace.key }}
bindsym $mod+Shift+{{ workspace.keybinding }} move container to workspace {{ workspace.key }}
{% if workspace.assigned is defined %}
assign [class={{ workspace.assigned | to_json }}] → number {{ workspace.key }}
{% endif %}
{% endfor %}

{% for application in startup_applications %}
exec --no-startup-id {{ application }}
{% endfor %}
exec --no-startup-id snixembed --fork
exec --no-startup-id caffeine
exec --no-startup-id copyq
exec --no-startup-id dunst
exec --no-startup-id redshift-gtk
exec --no-startup-id udiskie -ans
exec --no-startup-id mullvad-vpn
exec --no-startup-id blueman-applet
exec --no-startup-id solaar -w hide
exec --no-startup-id nm-applet
exec --no-startup-id mons -a #-x "~/.config/i3/monitor-handler.sh"
exec --no-startup-id Pilorama
exec --no-startup-id signal-desktop --use-tray-icon
exec --no-startup-id opensnitch-ui

{% for application in scratchpad_applications %}
for_window [instance={{ application.name | to_json }}] move scratchpad
bindsym $mod+{{ application.keybinding }} exec {{ i3_directory }}/{{ application.launcher }} {{ application.name | to_json }} {{ application.custom | default("") | to_json }}
{% endfor %}

for_window [title="Calculator"] floating enable
# Improve accessibility of Signal
for_window [class="Signal"] floating enable
for_window [class="Signal"] move scratchpad
bindsym $mod+m exec i3-msg "[class=\"Signal\"] scratchpad show"
# Improve accessibility of Pilorama
for_window [instance="Pilorama"] move scratchpad
bindsym $mod+p exec i3-msg "[instance=\"Pilorama\"] scratchpad show"

{% if i3_extra is defined %}
{{ i3_extra }}
{% endif %}

# reload the configuration file
bindsym $mod+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
set $mode_resize Resize: (h) shrink W, (j) grow H, (k) shrink H, (l) grow W
mode "$mode_resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+s mode "$mode_resize"

# Displays management
set $mode_monitors Monitors: (i) internal screen, (e) external screen, (m) multiple screens
mode "$mode_monitors" {
  bindsym i exec --no-startup-id "mons -o; {{ polybar_directory }}/launcher.sh", mode "default"
  bindsym e exec --no-startup-id "mons -s; {{ polybar_directory }}/launcher.sh", mode "default"
  bindsym m exec --no-startup-id "mons -e right; {{ polybar_directory }}/launcher.sh", mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "$mode_monitors"

set $mode_system System: (l) lock, (o) logout, (g) greeter, (s) suspend, (r) reboot, (Shift+p) poweroff
mode "$mode_system" {
  bindsym l exec --no-startup-id dm-tool lock, mode "default"
  # Firefox does not close well on its own
  bindsym o [class="firefox"] kill; exec sleep 1 && rm /tmp/osui.sock && i3-msg exit, mode "default"
  bindsym g exec --no-startup-id dm-tool switch-to-greeter, mode "default"
  bindsym s exec --no-startup-id dm-tool lock && systemctl suspend, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+p exec --no-startup-id systemctl poweroff -i, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$mode_system"

client.focused          $darkblue $darkblue $background $darkmagenta $darkblue
client.focused_inactive $background $background $foreground $background $background
client.unfocused        $background $background $foreground $background $background
client.urgent           $background $background $foreground $darkred $background
client.placeholder      $background $background $foreground $background $background

exec_always --no-startup-id {{ polybar_directory }}/launcher.sh

# Default settings related with X and environment
exec_always --no-startup-id "xset dpms 240 300 0"
exec_always --no-startup-id "xset r rate 200 25"
exec_always --no-startup-id "feh --no-fehbg --bg-scale {{ wallpaper_directory }}/wallpaper{{ wallpaper | splitext | last }}"
exec --no-startup-id "xcape -e 'Caps_Lock=Escape;Shift_L=parenleft;Shift_R=parenright'"
