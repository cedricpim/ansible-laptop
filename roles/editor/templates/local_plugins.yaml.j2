# Wiki in Vim
- repo: vimwiki/vimwiki
# Enhance Vimwiki and integrate with Taskwarrior
- repo: tbabej/taskwiki
  depends: vimwiki

# Add syntax
- repo: sheerun/vim-polyglot

# Add dispatch to vim
- repo: tpope/vim-dispatch
# Place dispatch as the main handler on neovim
- repo: radenling/vim-dispatch-neovim
  depends: vim-dispatch

# Open file on a given line
- repo: cedricpim/vim-fetch

# Configurations for ruby
- repo: vim-ruby/vim-ruby
  on_ft: ruby
# Rails helpers
- repo: tpope/vim-rails
  on_ft: [ruby,rake]

# Maximize window
- repo: szw/vim-maximizer

# Better testing integration
- repo: janko/vim-test
  on_cmd: [TestNearest,TestFile,TestSuite,TestLast,TestVisit]

# Better terminal integration
- repo: kassio/neoterm

# Add markdown viewer
- repo: iamcco/markdown-preview.nvim
  on_ft: [markdown,pandoc.markdown,rmd]
  build: 'cd app & yarn install'

# Rust Helpers
- repo: rust-lang/rust.vim
  on_ft: rust

# Continuously update session files
- repo: tpope/vim-obsession
- repo: dhruvasagar/vim-prosession
  depends: vim-obsession

# Add colorschemes
- repo: flazz/vim-colorschemes
