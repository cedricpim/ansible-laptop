{{ ansible_managed | comment }}

[calendars]
{% for calendar in calendar_calendars %}
  [[{{ calendar.name }}]]
    path = {{ vdirsyncer_directory }}/calendars/{{ calendar_user }}/{{ calendar.name }}/
    color = "{{ calendar.color }}"
    readonly = {{ calendar.readonly }}
{% endfor %}

[default]
  default_calendar = {{ calendar_calendars[0].name }}
  highlight_event_days = true

[sqlite]
  path = {{ khal_directory }}/cache

[locale]
  unicode_symbols = False

[view]
  event_view_always_visible = True
